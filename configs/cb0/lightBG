#A light bkgd (white BG, really) color theme w/hue in rainbow purple..red order.
colors = "fhue- = black"        #default fg => useless
colors = "fhue0 = purple"
colors = "fhue1 = blue"
colors = "fhue2 = cyan"
colors = "fhue3 = green"
colors = "fhue4 = yellow"
colors = "fhue5 = red"
colors = "fhue+ = white"

colors = "FHUE- = BLACK"
colors = "FHUE0 = PURPLE"
colors = "FHUE1 = BLUE"
colors = "FHUE2 = CYAN"
colors = "FHUE3 = GREEN"
colors = "FHUE4 = YELLOW"
colors = "FHUE5 = RED"
colors = "FHUE+ = WHITE"        #default bg => usless

colors = "bhue- = on_WHITE"     #default fg => useless
colors = "bhue0 = on_purple"
colors = "bhue1 = on_blue"
colors = "bhue2 = on_cyan"
colors = "bhue3 = on_green"
colors = "bhue4 = on_yellow"
colors = "bhue5 = on_red"
colors = "bhue+ = on_BLACK"

colors = "BHUE- = on_white"
colors = "BHUE0 = on_PURPLE"
colors = "BHUE1 = on_BLUE"
colors = "BHUE2 = on_CYAN"
colors = "BHUE3 = on_GREEN"
colors = "BHUE4 = on_YELLOW"
colors = "BHUE5 = on_RED"
colors = "BHUE+ = on_black"     #default bg => usless
